/**
 * # Iconos
 *
 * Paquete de iconos usados como fuente
 * (Puedes usar icomoon, fontello, foundicon, etc, o tus propios iconos)
 */

$iconFontFamily ?= 'icomoon'

@font-face {
    font-family: $iconFontFamily;
    src:url('fonts/icomoon.eot?-9djqav');
    src:url('fonts/icomoon.eot?#iefix-9djqav') format('embedded-opentype'),
        url('fonts/icomoon.woff?-9djqav') format('woff'),
        url('fonts/icomoon.ttf?-9djqav') format('truetype'),
        url('fonts/icomoon.svg?-9djqav#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
    font-family: $iconFontFamily;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

